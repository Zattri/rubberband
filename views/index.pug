html
  head
    meta(charset='utf-8')
    style!= styleSheet || ''
    title Http Requests
    script(src='convertor.js')
  body
    button(type='button').btn.btn-default.html Send Request
    div.input
      span.label Index
      input(type="text", name="index").index
    div.input
      span.label Type
      input(type="text", name="type").type
    div.input
      span.label Start Record
      input(type="text", name="recordindex").record-index

    script(src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")

    script.
      var setupButton = function(page) {
        $('.' + page).on('click', function() {
          var index = $('.index').val()
          var type = $('.type').val()
          var recordIndex = $('.record-index').val()
          var url = window.location.origin + '/process/' + index + "/" + type + "/" + recordIndex
          window.location.href = url
        })
      }

      setupButton('html')
